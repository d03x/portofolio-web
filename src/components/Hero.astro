---
import RandomQuote from "@/components/RandomQuote.astro";
---

<div class="min-h-screen px-6 flex items-center justify-center h-screen w-full">
  <div class="max-w-5xl py-24 mx-auto relative">
    <div
      class="absolute opacity-5 animate-bounce -top-3 -left-3 w-6 h-6 bg-[#FFD700] rounded-full border-2 border-black"
    >
    </div>
    <div
      class="absolute opacity-5 animate-bounce -bottom-3 -left-3 w-6 h-6 bg-[#FF69B4] rounded-full border-2 border-black"
    >
    </div>
    <div
      class="absolute opacity-5 animate-bounce -top-3 -right-3 w-6 h-6 bg-[#98FB98] rounded-full border-2 border-black"
    >
    </div>

    <div
      class="absolute opacity-5 animate-bounce -bottom-3 -right-3 w-6 h-6 bg-[#87CEEB] rounded-full border-2 border-black"
    >
    </div>
    <div class="flex lg:flex-row flex-col gap-6 lg:items-center">
      <div class="max-w-sm">
        <img
          class="w-12 cursor-none select-none h-12 border-2 shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] rounded-full"
          src="https://avatars.githubusercontent.com/u/149863272?v=4"
          alt=""
        />
        <div class="lg:text-5xl text-3xl mt-6 lg:mt-8">
          <h1>Hello, Saya Dadan Hidayat</h1>
        </div>
      </div>
      <div class="lg:ml-4 tracking-tight">
        <h1 class="lg:text-3xl text-lg sm leading-tight font-bold mb-4">
          Berharap jadi coder jagoan tanpa harus repot ngoding
        </h1>
        <p class="text-sm lg:text-base">
          <RandomQuote />
        </p>
        <div class="mt-7 flex-col gap-4 lg:flex-row flex">
          <button
            class="px-6 py-2 border-4 cursor-pointer card-hand border-black transition-colors bg-white hover:bg-gray-100"
            >Lihat Portfolio</button
          >
          <div class="flex gap-2">
            <a
              href="https://github.com/username/project12"
              target="_blank"
              rel="noopener noreferrer"
              class="flex w-full card-hand justify-center items-center gap-1 bg-black text-white px-3 py-1.5 text-sm hover:bg-gray-800 transition-colors"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                aria-hidden="true"
                role="img"
                class="iconify iconify--mdi w-4 h-4"
                width="1em"
                height="1em"
                viewBox="0 0 24 24"
                ><path
                  fill="currentColor"
                  d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
                ></path></svg
              >GitHub</a
            >
          </div>
          <a
            href="https://web.facebook.com/profile.php?id=100062612782711"
            class="px-6 py-2 border-4 cursor-pointer card-hand border-black transition-colors bg-white hover:bg-gray-100"
            >Temukan Saya</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
